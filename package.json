{
  "name": "qmk_xap",
  "version": "0.0.1",
  "description": "QMK XAP Client Application",
  "author": "QMK <hello@qmk.fm> (https://github.com/qmk)",
  "license": "GPL-3.0-or-later",
  "repository": "qmk/qmk_xap",
  "main": "src/electron/electron.js",
  "build": {
    "appId": "fm.qmk.qmk-xap",
    "productName": "QMK XAP",
    "copyright": "Copyright Â© 2021 QMK",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "pkg/icon.icns",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "./pkg/entitlements.mac.inherit.plist",
      "entitlementsInherit": "./pkg/entitlements.mac.inherit.plist"
    },
    "dmg": {
      "background": "pkg/dmg-background.png"
    },
    "win": {
      "icon": "pkg/icon.ico"
    },
    "nsis": {
      "oneClick": true
    },
    "linux": {
      "target": [
        "appimage"
      ]
    },
    "files": [
      "dist/**/*",
      "src/electron/**/*",
      "src/preload/**/*",
      "src/xap/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "scripts": {
    "modules": "yarn run electron-rebuild",
    "serve": "vite",
    "dev": "yarn modules && yarn serve",
    "build": "vue-tsc --noEmit && vite build",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build && yarn run electron-rebuild",
    "app:build": "yarn build:for:electron && yarn electron:builder"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "daisyui": "^1.10.0",
    "electron-better-ipc": "^2.0.1",
    "electron-window-state": "^5.0.3",
    "node-hid": "^2.1.1",
    "sprintf-js": "^1.1.2",
    "usb-detection": "^4.10.0",
    "vue": "^3.0.5",
    "xterm": "^4.13.0",
    "xterm-addon-fit": "^0.5.0",
    "xterm-webfont": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/eslint-parser": "^7.14.7",
    "@iconify/json": "^1.1.381",
    "@vitejs/plugin-vue": "^1.3.0",
    "@vue/compiler-sfc": "^3.0.5",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.6.6",
    "electron-builder": "^22.11.7",
    "electron-rebuild": "^2.3.5",
    "electron-reloader": "^1.2.1",
    "esbuild": "^0.12.17",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.15.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.2",
    "vite": "^2.4.4",
    "vite-plugin-components": "^0.13.2",
    "vite-plugin-icons": "^0.6.5",
    "vite-plugin-windicss": "^1.2.7",
    "vue-tsc": "^0.2.2",
    "wait-on": "^6.0.0",
    "windicss": "^3.1.6"
  }
}
